import Layout from "../layouts/Layout.astro";
import qs from "qs";

// is this problematic that you aree going directly to the api reference what if you need a whole bunch
let url = "http://45.79.101.19:1345/api/activities";

const query = qs.stringify({
  populate: {
    name: {
      populate: true,
    },
  },
});

const posts = await fetch(url + "?" + query).then((response) =>
  response.json()
);

console.log(posts.data.map((post) => post.attributes.name));

